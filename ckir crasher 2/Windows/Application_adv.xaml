<Window x:Class="ckir_crasher_2.Windows.Application_adv"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ckir_crasher_2.Windows"
        xmlns:fa="http://schemas.fontawesome.com/icons/fonts"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="Application" Height="650" Width="1050"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Border Background="#1a1a1a" CornerRadius="5" Name="border_main" Height="600" Width="1000" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            
            
            <!-- Content -->
            <Grid Grid.Column="1">

                <Border Name="border_cover" Background="#fff" CornerRadius="0,5,5,0" />
                <!-- 메인메뉴 -->
                <Border Name="border_mainmenu" Margin="15" d:IsHidden="True">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Name="button_toggle" VerticalAlignment="Center" Width="200" Height="200" hc:BorderElement.CornerRadius="200" Click="button_toggleFeature">
                            <StackPanel>
                                <fa:FontAwesome Name="status_icon" Icon="Solid_UnlockKeyhole" FontSize="24"/>
                                <TextBlock Name="status_text" FontFamily="/Fonts/#a고딕17" Margin="0,5,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"> OFF</TextBlock>
                            </StackPanel>
                            <Button.Effect>
                                <DropShadowEffect x:Name="button_dse" Color="#808080" Direction="0" ShadowDepth="0" BlurRadius="30" RenderingBias="Quality" Opacity="0.6"/>
                            </Button.Effect>
                        </Button>

                        <Grid Grid.Column="1">
                            <TextBlock Name="textblock_notify" TextAlignment="Center" VerticalAlignment="Center" FontFamily="/Fonts/#a고딕17" FontSize="14">
                    귀하의 개인정보와 브라우징 보안이 위협받고 있습니다.
                    <LineBreak/>
                    <Run FontFamily="/Fonts/#a고딕13">
                        버튼을 눌러 로그 수집을 차단하고 접속 차단을 해제하세요.
                    </Run>
                            </TextBlock>

                            <Button Name="button_goez" VerticalAlignment="Bottom" Margin="0,0,0,15" BorderBrush="Transparent" Click="btn_goAdv">
                                <fa:FontAwesome Icon="Solid_Sliders"/>
                            </Button>
                        </Grid>
                        
                    </Grid>
                </Border>
                
                <!-- 프로세스 관리자-->
                <Border Name="border_process" Margin="15,60,15,60" d:IsHidden="True">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <ListBox x:Name="processList" Margin="10" BorderBrush="Transparent" Style="{StaticResource ListBoxModernStyle}" d:ItemsSource="{d:SampleData ItemCount=5}" />
                        <StackPanel  Grid.Column="1"  Margin="15">
                            <Button Margin="10" Height="45" FontSize="16" FontFamily="/Fonts/#a고딕17" Style="{StaticResource ButtonPrimary}" HorizontalAlignment="Stretch" Click="killProcess_NET">
                                <StackPanel Orientation="Horizontal">
                                    <fa:FontAwesome Icon="Solid_SkullCrossbones" VerticalAlignment="Center"/>
                                    <TextBlock Margin="5,0,0,0" Text="프로세스 죽이기 (.NET Frameworks)" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Name="KillProcess_WinAPI" Margin="10" FontSize="16" Height="45" FontFamily="/Fonts/#a고딕17" Style="{StaticResource ButtonPrimary}" HorizontalAlignment="Stretch" Click="killProcess_WIN">
                                <StackPanel Orientation="Horizontal">
                                    <fa:FontAwesome Icon="Brands_Windows" VerticalAlignment="Center"/>
                                    <TextBlock Margin="5,0,0,0" Text="프로세스 죽이기(Windows API 호출)" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Name="KillProcess_DllInjection" IsEnabled="False" Margin="10" FontSize="16" Height="45" FontFamily="/Fonts/#a고딕17" Style="{StaticResource ButtonPrimary}" HorizontalAlignment="Stretch">
                                <StackPanel Orientation="Horizontal">
                                    <fa:FontAwesome Icon="Solid_Explosion" VerticalAlignment="Center"/>
                                    <TextBlock Margin="5,0,0,0" Text="프로세스 죽이기(Code Injection)" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Name="SuspendProcess" Margin="10" Height="45" FontSize="16" FontFamily="/Fonts/#a고딕17" Style="{StaticResource ButtonPrimary}" HorizontalAlignment="Stretch" Click="suspendProcess">
                                <StackPanel Orientation="Horizontal">
                                    <fa:FontAwesome Icon="Solid_Pause" VerticalAlignment="Center"/>
                                    <TextBlock Margin="5,0,0,0" Text="프로세스 일시중단" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Margin="10" FontSize="16" Height="45" FontFamily="/Fonts/#a고딕17" Style="{StaticResource ButtonPrimary}" HorizontalAlignment="Stretch" Click="RefreshProcessList">
                                <StackPanel Orientation="Horizontal">
                                    <fa:FontAwesome Icon="Solid_ArrowRotateRight" VerticalAlignment="Center"/>
                                    <TextBlock Margin="5,0,0,0" Text="프로세스 목록 새로고침" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                        </StackPanel>



                    </Grid>
                </Border>

                <!-- 로깅 중단-->
                <Border Name="border_stoplogger" Margin="15" d:IsHidden="True">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Button Name="button_toggle_stoplog" VerticalAlignment="Center" Width="200" Height="200" hc:BorderElement.CornerRadius="200" Click="task_maestro_disable">
                            <StackPanel>
                                <fa:FontAwesome Name="status_icon_stoplog" Icon="Solid_BoltLightning" FontSize="24"/>
                                <TextBlock Name="status_text_stoplog" FontFamily="/Fonts/#a고딕17" Margin="0,5,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center">
                                    실행하기
                                </TextBlock>
                            </StackPanel>
                            <Button.Effect>
                                <DropShadowEffect x:Name="button_dse_stoplog" Color="#ff8080" Direction="0" ShadowDepth="0" BlurRadius="30" RenderingBias="Quality" Opacity="0.6"/>
                            </Button.Effect>
                        </Button>

                        <Grid Grid.Column="1">
                            <StackPanel VerticalAlignment="Center" Margin="15">
                                <TextBlock FontFamily="/Fonts/#a고딕17" FontSize="16" TextWrapping="WrapWithOverflow">
                                    <fa:FontAwesome Icon="Regular_EyeSlash"/> 로깅 중단 모듈 (MaestroWeb 5)
                                    <LineBreak/>
                                    <Run FontFamily="/Fonts/#a고딕13" FontSize="12">
                                        사용자의 인터넷 사용기록을 무단 수집하는 MaestroWeb 5 에이전트를 비활성화 합니다.
                                    </Run>
                                </TextBlock>
                                <hc:TextBox Name="textbox_stoplog_target1" hc:InfoElement.Title="목표 프로세스 1" Margin="0,15,0,02">
                                    MaestroWebSvr
                                </hc:TextBox>
                                <hc:TextBox Name="textbox_stoplog_target2" hc:InfoElement.Title="목표 프로세스 2" Margin="0,15,0,02">
                                    MaestroWeAgent
                                </hc:TextBox>
                                <hc:TextBox Name="textbox_stoplog_target3" hc:InfoElement.Title="목표 프로세스 3" Margin="0,15,0,02">
                                    
                                </hc:TextBox>
                                <hc:TextBox Name="textbox_stoplog_repeat" hc:InfoElement.Title="반복 횟수" Margin="0,15,0,02">
                                    15
                                </hc:TextBox>
                            </StackPanel>

                            
                        </Grid>

                    </Grid>
                </Border>
                                                                                                                        
                <!-- 맘 아이 무력화-->
                <Border Name="border_momidisable" Margin="15" d:IsHidden="True">
                    <Grid>                                                                                                         
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Button Name="button_toggle_momi" Click="task_momi_disable" VerticalAlignment="Center" Width="200" Height="200" hc:BorderElement.CornerRadius="200"                 >
                            <StackPanel>
                                <fa:FontAwesome Name="status_icon_momi" Icon="Solid_BoltLightning" FontSize="24"/>
                                <TextBlock Name="status_text_momi" FontFamily="/Fonts/#a고딕17" Margin="0,5,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center">
                                    실행하기
                                </TextBlock>
                            </StackPanel>
                            <Button.Effect>
                                <DropShadowEffect x:Name="button_dse_momi" Color="#ff8080" Direction="0" ShadowDepth="0" BlurRadius="30" RenderingBias="Quality" Opacity="0.6"/>
                            </Button.Effect>
                        </Button>

                        <Grid Grid.Column="1">
                            <StackPanel VerticalAlignment="Center" Margin="15">
                                <TextBlock FontFamily="/Fonts/#a고딕17" FontSize="16" TextWrapping="WrapWithOverflow">
                                    <fa:FontAwesome Icon="Regular_EyeSlash"/> 맘아이 무력화 모듈 (유해차단시스템)
                                    <LineBreak/>
                                    <Run FontFamily="/Fonts/#a고딕13" FontSize="12">
                                        웹사이트 접속, 프로그램 실행을 무분별하게 차단하는 맘아이(유해차단시스템) 솔루션을 비활성화 합니다.
                                    </Run>
                                </TextBlock>
                                <hc:TextBox Name="textbox_momi_main" hc:InfoElement.Title="맘아이 메인 프로세스" Margin="0,15,0,02">
                                    qukapttp
                                </hc:TextBox>
                                <hc:TextBox Name="textbox_momi_target1" hc:InfoElement.Title="목표 프로세스 1" Margin="0,15,0,02">
                                    nfowjxyfd
                                </hc:TextBox>
                                <hc:TextBox Name="textbox_momi_target2" hc:InfoElement.Title="목표 프로세스 2" Margin="0,15,0,02">
                                    nhfneczzm
                                </hc:TextBox>
                                <hc:TextBox Name="textbox_momi_repeat" hc:InfoElement.Title="반복 횟수" Margin="0,15,0,02">
                                    15
                                </hc:TextBox>
                            </StackPanel>


                        </Grid>

                    </Grid>
                </Border>

                <!-- 환경설정-->
                <Border Name="border_settings" Margin="15">
                    <Grid>
                        <TextBlock Margin="30" FontFamily="/Fonts/#a고딕17" FontSize="18">
    <fa:FontAwesome Icon="Solid_Gears"/> 환경설정
                        </TextBlock>
                        <Grid Margin="50,75,50,30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="75"/>
                                <RowDefinition Height="75"/>
                                <RowDefinition Height="75"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>


                            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontFamily="/Fonts/#a고딕13" FontSize="16">
                                온라인 모드 <LineBreak/>
                                <Run FontSize="14">온라인에 연결하면 자동 업데이트등의 기능을 사용할 수 있어요</Run>
                            </TextBlock>
                            <ToggleButton Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Name="settings_onlineFeature" Style="{StaticResource ToggleButtonSwitch}" Click="settings_cv_online"/>
                            
                            <TextBlock Grid.Row="1" VerticalAlignment="Center" FontFamily="/Fonts/#a고딕13" FontSize="16">
                                스크립트 인터벌(ms)<LineBreak/>
                                <Run FontSize="14">저성능 PC에서 프로그램 구동이 어렵다면 인터벌을 증가시켜보세요.</Run>

                            </TextBlock>
                            <hc:PreviewSlider Grid.Row="1" Grid.Column="1" Name="settings_appRefreshRate" Minimum="1000" Maximum="4000" PreviewPositionChanged="settings_appRefreshRate_PreviewPositionChanged">
                                <hc:PreviewSlider.PreviewContent>
                                    <Label Style="{StaticResource LabelPrimary}" Content="{Binding Path=(hc:PreviewSlider.PreviewPosition),RelativeSource={RelativeSource Self}}" ContentStringFormat="#0"/>
                                </hc:PreviewSlider.PreviewContent>
                            </hc:PreviewSlider>

                            <TextBlock Grid.Row="2" VerticalAlignment="Center" FontFamily="/Fonts/#a고딕13" FontSize="16">
                                테마 선택(Beta)<LineBreak/>
                                <Run FontSize="14" FontFamily="/Fonts/#a고딕17">SECRET CKIR Unlocker™</Run><Run FontSize="14">를 더 다양하게 즐기기</Run>
                            </TextBlock>

                            <hc:ComboBox VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" hc:InfoElement.Placeholder="Light" FontFamily="/Fonts/#a고딕13">
                                <hc:CheckComboBoxItem>
                                    Light
                                </hc:CheckComboBoxItem>
                                <hc:CheckComboBoxItem>
                                    Dark
                                </hc:CheckComboBoxItem>
                                <hc:CheckComboBoxItem>
                                    DJMAX RESPECT V
                                </hc:CheckComboBoxItem>
                            </hc:ComboBox>













                        </Grid>
                        <TextBlock Foreground="#1a1a1a" VerticalAlignment="Bottom" TextAlignment="Center" FontFamily="/Fonts/#a고딕13">
                            <fa:FontAwesome Icon="Solid_Info"/> 일부 변경 사항은 프로그램 재시작 이후 적용됩니다.
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- 시스템 로그-->
                <Border Name="border_logs" Margin="15" d:IsHidden="True">
                    <Grid Margin="30">
                        <StackPanel>
                            <TextBlock FontFamily="/Fonts/#a고딕17" FontSize="18">
                                <fa:FontAwesome Icon="Regular_FileLines"/> 시스템 로그
                            </TextBlock>

                            <TextBox Name="textbox_logbox" Margin="0,15,0,0" Height="470" VerticalContentAlignment="Top" IsUndoEnabled="False">

                               

                            </TextBox>
                        </StackPanel>
                        
                    </Grid>
                </Border>

                <!-- 정보 -->
                <Border Name="border_info" Margin="15" d:IsHidden="True">
                    <Grid>
                        <TextBlock>
                           Secret 에 대하여
                        </TextBlock>
                    </Grid>
                </Border>

                <Grid.Effect>
                    <DropShadowEffect Color="#808080" Direction="0" ShadowDepth="0" BlurRadius="30" RenderingBias="Quality" Opacity="0.6"/>

                </Grid.Effect>
            </Grid>
            
            <!--side menu-->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="75"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <!--logo-->
                <Grid Grid.Row="0">
                    <Border Background="#6565ff" CornerRadius="5,0,0,0"/>
                    <Image Source="/Resources/kdic.png" Margin="15"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Border Background="#fff" CornerRadius="0,0,0,5"/>
                    <hc:SideMenu Name="sidemenu_menu" FontFamily="/Fonts/#a고딕13" AutoSelect="False" SelectionChanged="viewchanger" Height="450" VerticalAlignment="Top">

                        <hc:SideMenuItem Header="메인메뉴" >
                            <hc:SideMenuItem.Icon>
                                <fa:FontAwesome Icon="Solid_House"/>
                            </hc:SideMenuItem.Icon>
                            <hc:SideMenuItem Header="쉬운 사용" Name="sidemenuitem_mainmenu">
                                <hc:SideMenuItem.Icon>
                                    <fa:FontAwesome Icon="Solid_WandMagicSparkles"/>
                                </hc:SideMenuItem.Icon>


                            </hc:SideMenuItem>


                        </hc:SideMenuItem>
                        <hc:SideMenuItem Header="고급 도구">
                            <hc:SideMenuItem.Icon>
                                <fa:FontAwesome Icon="Solid_ScrewdriverWrench"/>
                            </hc:SideMenuItem.Icon>
                            <hc:SideMenuItem Header="프로세스 관리자">
                                <hc:SideMenuItem.Icon>
                                    <fa:FontAwesome Icon="Solid_ListUl"/>
                                </hc:SideMenuItem.Icon>
                            </hc:SideMenuItem>
                            <hc:SideMenuItem Header="로깅 중단">
                                <hc:SideMenuItem.Icon>
                                    <fa:FontAwesome Icon="Solid_EyeSlash"/>
                                </hc:SideMenuItem.Icon>
                            </hc:SideMenuItem>
                            <hc:SideMenuItem Header="맘아이 무력화">
                                <hc:SideMenuItem.Icon>
                                    <fa:FontAwesome Icon="Solid_TextSlash"/>
                                </hc:SideMenuItem.Icon>
                            </hc:SideMenuItem>
                        </hc:SideMenuItem>

                        <hc:SideMenuItem Header="정보">
                            <hc:SideMenuItem.Icon>
                                <fa:FontAwesome Icon="Solid_CircleInfo"/>
                            </hc:SideMenuItem.Icon>
                            <hc:SideMenuItem Header="환경설정">
                                <hc:SideMenuItem.Icon>
                                    <fa:FontAwesome Icon="Solid_Gears"/>
                                </hc:SideMenuItem.Icon>


                            </hc:SideMenuItem>

                            <hc:SideMenuItem Header="시스템 로그">
                                <hc:SideMenuItem.Icon>
                                    <fa:FontAwesome Icon="Regular_FileLines"/>
                                </hc:SideMenuItem.Icon>


                            </hc:SideMenuItem>
                            
                            <hc:SideMenuItem Header="SECRET에 대하여">
                                <hc:SideMenuItem.Icon>
                                    <fa:FontAwesome Icon="Solid_CircleInfo"/>
                                </hc:SideMenuItem.Icon>


                            </hc:SideMenuItem>

                        </hc:SideMenuItem>
                    </hc:SideMenu>
                </Grid>

                <Grid.Effect>
                    <DropShadowEffect Color="#808080" Direction="0" ShadowDepth="5" BlurRadius="30" RenderingBias="Quality" Opacity="0.6"/>

                </Grid.Effect>
            </Grid>
            
            
            <!--close button-->
            <Button HorizontalAlignment="Right" Click="closeapp" BorderBrush="Transparent" Grid.Column="1" VerticalAlignment="Top" Margin="5">
                <fa:FontAwesome Icon="Solid_Xmark"/>
            </Button>
        </Grid>
        
    </Border>
</Window>
