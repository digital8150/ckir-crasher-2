<Window x:Class="ckir_crasher_2.Windows.Application_ez"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ckir_crasher_2.Windows"
        xmlns:fa="http://schemas.fontawesome.com/icons/fonts"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="Application" Height="650" Width="450"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Border Background="#fff" CornerRadius="5" Name="border_main" Width="400" Height="600" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <hc:Growl/>
            <!-- TitleBar-->
            <Grid Grid.Row="0" MouseLeftButtonDown="dragmove">
                <TextBlock VerticalAlignment="Center" Margin="15,0" FontFamily="/Fonts/#a고딕17">
                    SECRET 사지방 보호기 2.0
                </TextBlock>
                <Button HorizontalAlignment="Right" Click="closeapp" BorderBrush="Transparent">
                    <fa:FontAwesome Icon="Solid_Xmark"/>
                </Button>
            </Grid>
            
            <!--Main Content-->
            <Grid Grid.Row="1">
                <Button Name="button_toggle" VerticalAlignment="Top" Width="200" Height="200" Margin="0,100,0,0" hc:BorderElement.CornerRadius="200" Click="button_toggleFeature">
                    <StackPanel>
                        <fa:FontAwesome Name="status_icon" Icon="Solid_UnlockKeyhole" FontSize="24"/>
                        <TextBlock Name="status_text" FontFamily="/Fonts/#a고딕17" Margin="0,5,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"> OFF </TextBlock>
                    </StackPanel>
                    <Button.Effect>
                        <DropShadowEffect x:Name="button_dse" Color="#808080" Direction="0" ShadowDepth="0" BlurRadius="30" RenderingBias="Quality" Opacity="0.6"/>
                    </Button.Effect>
                </Button>

                <TextBlock Name="textblock_notify" TextAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,150" FontFamily="/Fonts/#a고딕17" FontSize="14">
                    귀하의 개인정보와 브라우징 보안이 위협받고 있습니다.
                    <LineBreak/>
                    <Run FontFamily="/Fonts/#a고딕13">
                        버튼을 눌러 로그 수집을 차단하고 접속 차단을 해제하세요.
                    </Run>
                </TextBlock>

                <Button Name="button_goadv" VerticalAlignment="Bottom" Margin="0,0,0,15" BorderBrush="Transparent" Click="btn_goAdv">
                    <fa:FontAwesome Icon="Solid_Sliders"/>
                </Button>
                
            </Grid>
            
        </Grid>

        <Border.Effect>
            <DropShadowEffect Color="#808080" Direction="0" ShadowDepth="0" BlurRadius="30" RenderingBias="Quality" Opacity="0.6"/>
        </Border.Effect>
    </Border>
</Window>
